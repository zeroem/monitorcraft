# description "start and stop the minecraft-server"

console log

PID_FILE=/var/run/carbon-cache.pid

CARBON_CACHE_OPTS="

exec start-stop-daemon \
  --chdir {{ graphite_home }} --chuid {{ graphite_user }}:{{ graphite_group }} \
  --user {{ graphite_user}} --pidfile /var/run/carbon-cache.pid \
  --exec /var/graphite/bin/carbon-cache.py --start -- --pidfile=/var/run/carbon-cache.pid --logdir=/var/log

start on runlevel [2345]
stop on runlevel [^2345]

respawn
respawn limit 20 5
